@using System.Web.Mvc.Html
@using inventoryAppWebUi.Models
@using Ninject.Infrastructure.Language
@model RegisterViewModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div id="content">
        <div class="container-fluid">
            <a href=""><img src="~/Content/Assets/images/logo.png" class="logo" alt="logo" style="position: relative; left: 20px; top: 5px; height: 50px"></a>
            <div class="row">
                <div class="col-sm-6 auth-box">
                    <div class="proclinic-box-shadow">
                        <h2 class="widget-title">@ViewBag.Title</h2>
                        @using (Html.BeginForm("SignUp", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">

                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.DropDownListFor(model => model.RoleName, new SelectList(Model.Roles), "Select Gender", new {@class = "form-control"})

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <input type="submit" value="Sign Up" class="btn col-sm-12 bg-primary" style="height: 3rem" />
                                </div>
                            </div>
                            <p>
                                Already signed up? Login @Html.ActionLink("here", "Login")
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
