@using inventoryAppWebUi.Models
@model inventoryAppWebUi.Models.RegisterViewModel


@{
    ViewBag.Title = "Sign Up";
   
             @*var roles = (List<IdentityRole>
    )ViewData["roles"];*@
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }

    <div class="row">
        <div id="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6 auth-box">
                        <div class="proclinic-box-shadow">
                            <h2 class="widget-title">@ViewBag.Title</h2>
                            @using (Html.BeginForm("SignUp", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                            {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.Label("Select Your User Role", new { @class = "col-md-2 control-label"})
                                <div class="col-sm-12">
                                    @*@Html.DropDownList("Name")*@
                                    @*@Html.DropDownList("Name", ViewBag.Name)*@
                                    @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder="Email"})
                                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(m => m.Username, new {@class = "col-md-2 control-label"})
                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.Username, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => m.Password, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.TermsAgree)
                                        @Html.LabelFor(m => m.TermsAgree)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Register" class="btn btn-default" />
                                </div>
                            </div>
                            <p>
                                Already signed up? Login @Html.ActionLink("here", "Login")
                            </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
