@model inventoryAppDomain.Entities.DrugCategory
@{
    ViewBag.Title = "AddDrugCategory";
    ViewBag.CurrentPage = "Add Drug Category";

}

@if ((string)TempData["categoryAdded"] == "added")
{
    @Html.Partial("_SwaSuccessPartial")
}

@if ((string)TempData["failedToAddCategory"] == "failed")
{
    @Html.Partial("_ErrorNotificationPartial")
}


@using (Html.BeginForm("SaveDrugCategory", "Drug", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="col-sm-8 mx-auto mt-3">
        <div class="form-group">
            <div class="col-sm-12">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "Category Name" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" value="Add" class="btn btn-primary col-sm-12" style="height: 3rem" />
            </div>
        </div>
    </div>

}