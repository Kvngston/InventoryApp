@model List<inventoryAppDomain.Entities.Drug>

@{
    ViewBag.Title = "AvailableDrugs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Drug List</h4>
                        <p class="mb-0">
                            A drug dashboard lets you easily gather and visualize customer data from optimizing <br>
                            the customer experience, ensuring customer retention.
                        </p>
                    </div>

                    <a id="addDrugModal" onclick="PrescribeDrug()" data-target="#edit-note" class="border border-primary add-list px-3 py-1 text-primary rounded"><i class="fas fa-plus mr-3"></i>Prescribe</a>


                    @*<a data-toggle="modal" data-target="#edit-note" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Add Drug</a>*@
                </div>
            </div>


            @if (!Model.Any())
            {
                <p>No Available drug</p>
            }
            else
            {
                <div class="col-lg-12">
                    <div class="table-responsive rounded mb-3">
                        <table id="tablee" class="display table display table mb-0 tbl-server-info">
                            <thead class="bg-white text-uppercase">
                                <tr>
                                    <th>Drug Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var drug in Model)
                                {

                                    <tr>
                                        <td>@drug.DrugName</td>
                                        <td>@drug.Quantity</td>
                                        <td>@drug.Price</td>
                                        <td>
                                            <div class="d-flex align-items-center list-action">
                                                <a onclick="PrescribeParticularDrug(@drug.Id)" data-target="#edit-note" class="badge bg-success mr-2"
                                                   href="#"><i data-toggle="tooltip" data-placement="top" data-original-title="Edit" class="ri-pencil-line mr-0"></i></a>
                                            </div>
                                        </td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@Html.Partial("_PrescribeModalPartial")

@Html.Partial("_FooterPartial")

<script>
    $(document).ready(function () {
        $('#tablee').DataTable();

    });

    async function CalculatePrescription() {
        const md = parseInt(document.getElementById("MorningDosage").value);
        const ad = parseInt(document.getElementById("AfternoonDosage").value);
        const ed = parseInt(document.getElementById("EveningDosage").value);

        const duration = parseInt(document.getElementById("PrescriptionDuration").value);

        const totalDosage = document.getElementById("totalDosage");

        var result = await (md + ad + ed) * duration;
        totalDosage.value = result; 
    }

    async function PrescribeDrug() {
        var url = "/Drug/PrescribeDrug/";
        var data = await fetch(url);
        data = await data.text();

        var modalPartial = document.getElementById("contentpage");
        modalPartial.innerHTML = data;

        $.validator.unobtrusive.parse("#form");
        $("#edit-note").modal('show');
    }

    async function PrescribeParticularDrug(id) {
        var url = "/Drug/PrescribeParticularDrug/" + id;
        var data = await fetch(url);
        data = await data.text();

        var modalPartial = document.getElementById("contentpage");
        modalPartial.innerHTML = data;

        $.validator.unobtrusive.parse("#form");
        $("#edit-note").modal('show');

    }

    function OnSuccess(data) {
        if (data.response == "success") {
            window.location.reload();
            $("#addDrugModal").modal('hide');
            $("#edit-note").modal('hide');

        } else if (data.response == null) {

            var modalPartial = document.getElementById("contentpage");
            modalPartial.innerHTML = data;

            $.validator.unobtrusive.parse("#form");
            $("#edit-note").modal('show');

        }
    }

    const Morning = document.getElementById("Morning");

    Morning.addEventListener("keydown", event => {
        alert("hhh");
    })
</script>