@using inventoryAppDomain.Entities
@using Newtonsoft.Json
@model List<Notification>
@section metatags {
    <meta name="description" content="Notification page for POSDrugs" />
    
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
</head>
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">All Notifications</h4>
                        <p class="mb-0">
                            This is the notifications page for POSDrugs
                        </p>
                    </div>




                    @*<a data-toggle="modal" data-target="#edit-note" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Add Drug</a>*@
                </div>
            </div>


            <div class="col-12 notificationBar">
                <div class="border-bottom border-top" role="status" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <span class="mr-2 text-danger"> <i class="fas fa-exclamation-triangle"></i> </span>
                        <strong class="mr-auto badge badge badge-primary">Category</strong>
                        <small>11 mins ago</small>
                        <button id="close" type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>                    
                        <div class="toast-body text-dark">
                            <div>
                                <strong class="mr-auto">Title</strong>
                            </div>

                            Hello, world! This is a toast message.
                        </div>
                </div>

            </div>
        </div>



        <button class="btn btn-success">Read all</button>

        <div class="col-lg-12">


                        @foreach (var notification in Model)
                        {
                           
                            @*<div class="col-12 notificationBar">
                                <div class="border border-info rounded" role="status" aria-live="assertive" aria-atomic="true">
                                    <div class="toast-header border-bottom">
                                        <span class="rounded mr-2 text-danger"> <i class="fas fa-exclamation-triangle"></i> </span>
                                        <strong class="mr-auto"></strong>
                                        <small>11 mins ago</small>
                                        <button id="close" type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="toast-body">
                                    </div>
                                </div>

                            </div>*@

                            <div class="col-12 notificationBar">
                                <div class="border-bottom border-top" role="status" aria-live="assertive" aria-atomic="true">
                                    <div class="toast-header">
                                        <span class="mr-2 text-danger"> <i class="fas fa-exclamation-triangle"></i> </span>
                                        <strong class="mr-auto badge badge badge-primary">@notification.NotificationCategory</strong>
                                        <small>@notification.CreatedAt</small>
                                        <button id="close" type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="toast-body text-dark">
                                        <div>
                                            <strong class="mr-auto">@notification.Title</strong>
                                        </div>

                                            @notification.NotificationDetails.

                                    </div>
                                </div>

                            </div>
                        }




                    
        </div>

    </div>
    </div>

<script>
    $('document').ready(function () {
        $('.toast').toast('show');

        $('#close').click(function () {
            $('.notificationBar').css({ 'display': 'none'})
        })

    })
</script>

