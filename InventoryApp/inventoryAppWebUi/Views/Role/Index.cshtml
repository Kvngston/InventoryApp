@model List<String>

@{
    ViewBag.Title = "Index";
    ViewBag.CurrentPage = "All Roles";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Available Roles For Application</h2>

@*@Html.ActionLink("Create Role", "Create", "Role", null,
                        new { @class = "btn btn-primary" })*@

<style type="text/css">
    #tbrole, .c {
        border: double;
    }
</style>

<div class="table-responsive">

    <table id="tbrole" class="table table-hover table-bordered">
        <thead>
            <tr class="success">
                <td class="c">
                    Role Name
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="c">
                        @item
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Create New Role", "Create", "Role", null,
                        new { @class = "btn btn-primary" })